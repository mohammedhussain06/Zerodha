{
  "name": "zerodha-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo entry point for the Zerodha clone frontend, dashboard, and backend apps.",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "npm run bootstrap:frontend && npm run bootstrap:dashboard && npm run bootstrap:backend",
    "bootstrap:frontend": "npm --prefix frontend install",
    "bootstrap:dashboard": "npm --prefix dashboard install",
    "bootstrap:backend": "npm --prefix backend install",
    "build": "npm run build:dashboard",
    "build:dashboard": "npm --prefix dashboard run build",
    "build:frontend": "npm --prefix frontend run build",
    "start": "npm run start:backend",
    "start:backend": "node backend/index.js",
    "start:dashboard": "npm --prefix dashboard start",
    "start:frontend": "npm --prefix frontend start"
  }
}

